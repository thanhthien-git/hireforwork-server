{
  "version": 2,
  "buildCommand": "go build -o api/main",
  "builds": [
    {
      "src": "api/*.go",
      "use": "@vercel/go"
    }
  ],
  "routes": [
    {
      "src": "/jobs",
      "methods": ["GET"],
      "dest": "/api/main"
    },
    {
      "src": "/jobs",
      "methods": ["POST", "PUT"],
      "dest": "/api/main"
    },
    {
      "src": "/(.*)",
      "dest": "/api/main"
    }
  ]
}
